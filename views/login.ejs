<%- include('header') -%>
<%- include('navbar') -%>

<div class="container" style="width: 40%">
    <ul class="collection no-border">
        <li class="collection-item" style="background: #121212; border-width: 0">
            <div class="row" style="background: linear-gradient(0deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.05)), #121212;">
                <form method="post" action="/login" class="col s8 offset-s2">

                    <div class="row">
                        <div class="col s1"></div>
                        <p class="col title">Bejelentkezés</p>
                        <div class="col s1"></div>
                    </div>

                    <div class="row">
                        <div class="col s1"></div>
                        <div class="input-field col s10">
                            <input id="email" name="email" type="email" class="validate description">
                            <label for="email">Email</label>
                        </div>
                        <div class="col s1"></div>
                    </div>

                    <div class="row">
                        <div class="col s1"></div>
                        <div class="input-field col s10">
                            <input id="password" name="password" type="password" class="validate description">
                            <label for="password">Jelszó</label>
                        </div>
                        <div class="col s1"></div>
                    </div>

                    <div class="row">
                        <div class="col s1"></div>
                        <div class="col s8">
                            <label>
                                <input id="forgotten_password" name="forgotten_password" type="checkbox" />
                                <span>Elfelejtett jelszó</span>
                            </label>
                        </div>
                        <div class="col s1">
                            <button class="waves-effect waves-light btn" style="background: #0094CC;" type="submit" value="Belépés">
                                Belépés
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </li>
    </ul>
</div>

<%- include('footer') -%>